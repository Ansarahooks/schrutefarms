<h1 class="center" style="text-align:center;">Edit Profile</h1><br>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <% @user.errors.full_messages.each do |msg| %>
      <ul><li style="color: red"><%= msg %></li></ul>
    <% end %>
  </div>
<% end %>

<div style="text-align:center;">
<%=form_for @user do |f|%>
  <%=f.label :name%><br>
  <%=f.text_field :name%><br><br>
  <%=f.label :age%><br>
  <%=f.number_field :age%><br><br>
  <%=f.label "Upload an image (link)"%><br>
  <%=f.text_area :image_url%><br><br>
  <%=f.submit "Update Profile"%><br>
<%end%>
</div>
