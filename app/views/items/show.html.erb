<h1><%= @item.name %></h1>

<img src="<%= @item.image_url %>" height="200" width="300">

<p>Description: <%= @item.description %></p>
<p>Cost: $<%= @item.cost %></p>

<button type="button">Add to Cart</button>
<br>
<br>
<% if @item.bnb == true %>
    <%= link_to("Back to BnB", BnB_items_path(@item)) %>
<% else %>
    <%= link_to("Back to store", store_items_path(@item)) %>
<% end %>
