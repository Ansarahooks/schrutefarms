<% if flash[:success].present? %>
    <p style="color: green"><%= flash[:success] %></p>
<% end %>
<br>

<h1 style="text-align:center;">All Store Items</h1>

<% @items_store.each do |item| %>
    <img src="<%= item.image_url %>" height="200" width="250"><br>
    <%= link_to item.name, item_path(item) %><br>
    <p>Price: <%= number_to_currency item.cost %><br></p>
    <br>
<% end %>
