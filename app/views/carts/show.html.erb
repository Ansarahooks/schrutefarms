<h1>View Cart</h1>

<% if @order_items.present? %>
  <% @order_items.each do |orderitem| %>
    <%= orderitem.item.name %><br>
    <img src="<%= orderitem.item.image_url %>" height= 50 width= 50><br>
    Quantity: <%= orderitem.quantity %><br>
    Price: <%= number_to_currency (orderitem.item.cost * orderitem.quantity) %><br>
    <%= form_tag(order_item_path(orderitem), :method => :delete) do %>
      <%= submit_tag "Remove" %>
    <% end %>
    <br>
  <% end %>
  <strong>Your Total: </strong><%= number_to_currency current_order.total_price%><br><br>
  <%= link_to "Checkout", confirmation_cart_path %>
<% else %>
  <p> Your cart is currently empty.</p>
<% end %>
