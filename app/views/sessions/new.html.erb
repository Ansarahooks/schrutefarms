<%if @error%>
  <p style="color: red"> <%=@error%></p>
<%end%>

<%=form_tag(login_path) do%>
<h3 align=center><%=label_tag("Username")%> <%=text_field_tag :username%></h1>
<h3 align=center><%=label_tag("Password")%> <%=password_field_tag :password_digest %></h3>
<p align=center>Not a member? <%= link_to "sign up", new_user_path %></p>
<p align=center><%=submit_tag('login')%></p>
<%end%>
