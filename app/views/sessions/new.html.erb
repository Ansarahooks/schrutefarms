<%if @error%>
  <p style="color: red"> <%=@error%></p>
<%end%>

<%=form_tag(login_path) do%>
<%=label_tag("Username")%>
<%=text_field_tag :username%>
<%=label_tag("Password")%>
<%=password_field_tag :password_digest %>
<%=submit_tag('login')%>
<%end%>


<p>Not a member? <%= link_to "sign up", new_user_path %></p>